<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.customsite.week2.LocationActivity"
    tools:showIn="@layout/activity_location">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtLatitude"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Latitude:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/txtLatitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:ems="5"
        android:inputType="numberDecimal"
        android:maxLength="11"
        android:numeric="decimal"
        android:text="39.5186" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtLongitude"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Latitude:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/txtLongitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtLatitude"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="15dp"
        android:ems="5"
        android:inputType="numberDecimal"
        android:maxLength="11"
        android:numeric="decimal"
        android:text="-104.7613" />

    <Button
        android:id="@+id/btnStart1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtLongitude"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:width="60sp"
        android:background="#c20805"
        android:text="Use Location"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtZipCode"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Or enter ZIP Code:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/txtZipCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnStart1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="15dp"
        android:ems="5"
        android:inputType="number"
        android:maxLength="5"
        android:numeric="integer" />

    <Button
        android:id="@+id/btnStart2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtZipCode"
        android:layout_centerHorizontal="true"
        android:width="60sp"
        android:background="#c20805"
        android:text="Use ZIP Code"
        android:textColor="#ffffff"
        android:textStyle="bold" />


</RelativeLayout>
